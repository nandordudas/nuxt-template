{
  "name": "workspace",
  "version": "0.2.0",
  "description": "Opinionated Nuxt.js template",
  "author": "Nándor Dudás <nandor.dudas@gmail.com>",
  "license": "MIT",
  "scripts": {
    "commit": "commit",
    "lint:fix": "pnpm lint --fix",
    "lint": "eslint --cache --flag unstable_ts_config --config .config/eslint.ts ."
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:",
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "@commitlint/prompt-cli": "^19.6.1",
    "eslint": "catalog:",
    "execa": "^9.5.2",
    "lint-staged": "^15.2.11",
    "simple-git-hooks": "^2.11.1"
  },
  "simple-git-hooks": {
    "commit-msg": "pnpm commitlint --config .config/commitlint.ts",
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "pnpm lint:fix"
  }
}
